---
import "../styles/global.css";
import { ThemeAwareToaster } from "@/components/ui/sonner";
import { ThemeToggle } from "@/components/ThemeToggle";

interface Props {
  title?: string;
  description?: string;
}

const { title = "gomflo.dev", description = "Sitio personal" } =
  Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:locale" content="es" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,400;0,500;0,600;1,400&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const isDark = stored === "dark" || (!stored && prefersDark);
        if (isDark) {
          document.documentElement.classList.add("dark");
          var meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute("content", "#0f0f0f");
        } else {
          document.documentElement.classList.remove("dark");
          var meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute("content", "#ffffff");
        }
      })();
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Ir al contenido principal</a>
    <header class="header">
      <div class="header-inner">
        <a href="/" class="header-title" aria-label="Ir al inicio">gomflo</a>
        <ThemeToggle client:visible />
      </div>
    </header>
    <slot />
    <ThemeAwareToaster client:visible />
  </body>
</html>

<style is:global>
  .skip-link {
    position: absolute;
    left: -9999px;
    z-index: 999;
    padding: 0.75rem 1.5rem;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid var(--color-border);
  }
  .skip-link:focus-visible {
    left: 1rem;
    top: 1rem;
    outline: 2px solid var(--color-text);
    outline-offset: 2px;
  }

  .header {
    border-bottom: 0.5px solid var(--color-border);
    padding: 1rem 0;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .header-title {
    display: inline-block;
    padding-left: 0;
    font-family: var(--font-display);
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.15s ease;
  }

  .header-title:hover,
  .header-title:focus-visible {
    color: var(--color-text);
    outline: none;
  }
  .header-title:focus-visible {
    outline: 2px solid var(--color-text);
    outline-offset: 4px;
  }
</style>
