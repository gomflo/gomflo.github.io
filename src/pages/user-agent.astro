---
import Layout from '../layouts/Layout.astro';
import UserAgentView from '../components/UserAgent';
---

<Layout title="Mi User Agent | gomflo.github.io" description="Consulta el User Agent de tu navegador">
  <main class="container">
    <h1 class="title">Mi User Agent</h1>
    <UserAgentView client:load />
  </main>
</Layout>

<style>
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .title {
    font-family: var(--font-sans);
    font-size: 2rem;
    font-weight: 400;
    margin: 0 0 0.5rem;
    color: var(--color-text);
  }

</style>
