---
import Layout from '../layouts/Layout.astro';
import CharacterCounter from '../components/CharacterCounter';
---

<Layout title="Contar caracteres | gomflo.dev" description="Cuenta caracteres, palabras y líneas de tu texto en tiempo real">
  <main id="main-content" class="container" tabindex="-1">
    <header class="page-header">
      <h1 class="title">Contar caracteres</h1>
      <p class="lead">Cuenta caracteres, palabras y líneas de tu texto en tiempo real.</p>
    </header>
    <section aria-labelledby="contar-caracteres-heading">
      <h2 id="contar-caracteres-heading" class="sr-only">Contador de caracteres</h2>
      <CharacterCounter client:load />
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: clamp(2rem, 5vw, 4rem) 1.5rem;
    scroll-margin-top: 2rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  .title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 5vw, 2.25rem);
    font-weight: 600;
    letter-spacing: -0.03em;
    line-height: 1.2;
    margin: 0 0 0.5rem;
    color: var(--color-text);
    text-wrap: balance;
  }

  .lead {
    font-family: var(--font-sans);
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    max-width: 42ch;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
