---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Inicio | gomflo.dev"
  description="Sitio personal con herramientas útiles"
>
  <main id="main-content" class="main" tabindex="-1">
    <header class="hero">
      <h1 class="hero-title">Herramientas</h1>
      <p class="hero-subtitle">Simples y funcionales.</p>
    </header>
    <nav class="nav" aria-label="Herramientas disponibles">
      <ul class="links" role="list">
        <li>
          <a href="/formatear-json" class="link">Formatear JSON</a>
        </li>
        <li>
          <a href="/decodificar-jwt" class="link">Decodificar JWT</a>
        </li>
        <li>
          <a href="/base64-archivo" class="link">Base64&nbsp;↔&nbsp;Archivo</a>
        </li>
        <li>
          <a href="/contar-caracteres" class="link">Contar caracteres</a>
        </li>
        <li>
          <a href="/remover-acentos" class="link">Remover acentos</a>
        </li>
        <li>
          <a href="/ordenar-lista" class="link">Ordenar lista</a>
        </li>
        <li>
          <a href="/user-agent" class="link">Mi User Agent</a>
        </li>
      </ul>
    </nav>
  </main>
</Layout>

<style>
  .main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: clamp(2rem, 5vw, 4rem) 1.5rem;
    scroll-margin-top: 2rem;
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 10vw, 4.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    color: var(--color-text);
    margin: 0;
    text-wrap: balance;
  }

  .hero-subtitle {
    font-family: var(--font-sans);
    color: var(--color-text-muted);
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    text-wrap: balance;
  }

  .nav {
    flex: 1;
  }

  .links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .link {
    font-family: var(--font-display);
    display: inline-flex;
    align-items: center;
    min-height: 44px;
    padding: 0.75rem 0;
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
    font-size: 1rem;
    cursor: pointer;
    transition:
      border-color 0.2s ease,
      color 0.2s ease,
      opacity 0.2s ease;
    -webkit-tap-highlight-color: transparent;
  }

  .link:hover,
  .link:focus-visible {
    border-bottom-color: var(--home-accent);
    color: var(--home-accent);
    outline: none;
  }

  .link:focus-visible {
    outline: 2px solid var(--color-text);
    outline-offset: 4px;
  }

  @media (prefers-reduced-motion: no-preference) {
    .hero-title {
      animation: home-fade-in 0.4s ease-out both;
    }
    .hero-subtitle {
      animation: home-fade-in 0.4s ease-out 0.05s both;
    }
    .links li {
      animation: home-fade-in 0.35s ease-out both;
    }
    .links li:nth-child(1) { animation-delay: 0.1s; }
    .links li:nth-child(2) { animation-delay: 0.14s; }
    .links li:nth-child(3) { animation-delay: 0.18s; }
    .links li:nth-child(4) { animation-delay: 0.22s; }
    .links li:nth-child(5) { animation-delay: 0.26s; }
    .links li:nth-child(6) { animation-delay: 0.3s; }
    .links li:nth-child(7) { animation-delay: 0.34s; }
  }

  @keyframes home-fade-in {
    from {
      opacity: 0;
      transform: translateY(0.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
